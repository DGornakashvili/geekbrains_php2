<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/{% block css %}style.css{% endblock %}">
</head>
<body>
{% block sign %}
    <nav class="product-crud">
        {% if session %}
            <a href="/" class="crud-main">Main</a>
            <a href="/products/" class="crud-products">Products</a>
            <a href="/account/" class="crud-account">My Account</a>
            <a href="/basket/" class="crud-cart">My Cart</a>
            <a href="/order/" class="crud-orders">My Orders</a>

        {% if session.role %}
            <a href="/order/getAllOrders/" class="crud-allOrders">All Orders</a>
        {% endif %}

            <a href="/sign/out/">Sign out</a>
        {% else %}
            <a href='/sign/'>Sign in</a>
            <a href='/sign/up/'>Sign up</a>
        {% endif %}
    </nav>
{% endblock %}

{% block body %}
<div class="gallery">

    {% include 'galleryItem.twig' %}

</div>
{% endblock %}
<script src="/js/jquery.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>